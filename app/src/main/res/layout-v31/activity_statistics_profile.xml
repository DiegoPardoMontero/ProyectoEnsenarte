<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paco">

    <!-- Barra superior con botón de retroceso -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/coralSea"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetStart="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="Estadísticas"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:titleTextColor="@color/paco" />

    <!-- Imagen del avatar -->

    <!-- CardView para las estadísticas -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="411dp"
        android:layout_height="222dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_capybara"

        app:layout_constraintBottom_toTopOf="@+id/cardViewEstadisticas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewEstadisticas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarImageView">

        <RelativeLayout
            android:id="@+id/div_estadic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="239dp"
            android:clipToOutline="true"
            android:background="@drawable/div_estadic"
            android:elevation="20dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <!-- Texto de insignias obtenidas -->
    <TextView
        android:id="@+id/textInsigniasObtenidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@raw/regularbold"
        android:text="Insignias obtenidas"
        android:textColor="@color/paciencie"
        android:textSize="22sp"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewEstadisticas" />

</androidx.constraintlayout.widget.ConstraintLayout>