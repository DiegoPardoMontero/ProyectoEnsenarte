<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <!-- LinearLayout vertical para contener todos los niveles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor para el Nivel Andina -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Level Banner, streak days and XP points Andina -->
            <androidx.cardview.widget.CardView
                android:layout_width="379dp"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:backgroundTint="@color/paco"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <!-- Contenido del Banner del Nivel Andina -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop= "20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Título de Nivel -->
                    <TextView
                        android:id="@+id/tvTitleAndina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@raw/regularbold"
                        android:paddingStart="35dp"
                        android:paddingEnd="15dp"
                        android:text="@string/nivel_1_regi_n_andina"
                        android:textColor="#585554"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Ícono de Racha -->
                    <ImageView
                        android:id="@+id/iconStreakAndina"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="@string/rachainc"
                        android:src="@drawable/ic_fires" />

                    <!-- Texto de Racha -->
                    <TextView
                        android:id="@+id/tvStreakAndina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@raw/regularbold"
                        android:text="@string/_1"
                        android:textColor="#8D8A89"
                        android:textSize="18sp" />

                    <!-- Ícono de Puntos -->
                    <ImageView
                        android:id="@+id/iconPointsAndina"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="@string/rch"
                        android:paddingTop="4dp"
                        android:src="@drawable/ic_light" />

                    <!-- Texto de Puntos -->
                    <TextView
                        android:id="@+id/tvPointsAndina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@raw/regularbold"
                        android:text="@string/_500dp"
                        android:textColor="#8D8A89"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Imagen del Mapa Andina -->
            <ImageView
                android:id="@+id/mapImageAndina"
                android:layout_width="match_parent"
                android:layout_height="749dp"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_map_andina" />

            <!-- Niveles de Andina -->
            <!-- Tus elementos de nivel (level1, level2, level3, lockAndina) van aquí, igual como los has definido -->

            <!-- Level 1 - Andina-->
            <ImageView
                android:id="@+id/level1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="101dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_1" />

            <!-- Level 2 - Andina -->
            <ImageView
                android:id="@+id/level2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="76dp"
                android:layout_marginTop="220dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_2" />

            <!-- Level 3 - Andina -->
            <ImageView
                android:id="@+id/level3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="300dp"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="24dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_3" />

            <!-- Lock Icon - Andina -->
            <ImageView
                android:id="@+id/lockAndina"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="180dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_lock_level" />



        </RelativeLayout>

        <!-- Contenedor para el Nivel Caribe -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Banner del Nivel Caribe -->

            <!-- Level Banner, streak days and XP points Caribbean -->
