                android:id="@+id/bannerCaribbean"
                android:layout_width="379dp"
                android:layout_height="65dp"
                android:layout_margin="25dp"
                android:padding="8dp"
                android:visibility="gone"
                android:backgroundTint="@color/paco"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop= "20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Título de Nivel -->
                    <TextView
                        android:id="@+id/tvTitleCaribbean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@raw/regularbold"
                        android:paddingStart="35dp"
                        android:paddingEnd="15dp"
                        android:text="@string/nivel_2_regi_n_caribe"
                        android:textColor="#585554"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Ícono de Racha -->
                    <ImageView
                        android:id="@+id/iconStreakCaribbean"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="@string/rachainc"
                        android:src="@drawable/ic_fires" />

                    <!-- Texto de Racha -->
                    <TextView
                        android:id="@+id/tvStreakCaribbean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@raw/regularbold"
                        android:text="@string/_1"
                        android:textColor="#8D8A89"
                        android:textSize="18sp" />

                    <!-- Ícono de Puntos -->
                    <ImageView
                        android:id="@+id/iconPointsCaribbean"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="@string/rch"
                        android:paddingTop="4dp"
                        android:src="@drawable/ic_light" />

                    <!-- Texto de Puntos -->
                    <TextView
                        android:id="@+id/tvPointsCaribbean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@raw/regularbold"
                        android:text="@string/_500dp"
                        android:textColor="#8D8A89"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Imagen del Mapa Caribe -->
            <ImageView
                android:id="@+id/mapImageCaribbean"
                android:layout_width="match_parent"
                android:layout_height="749dp"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_map_caribbean" />

            <!-- Niveles de Caribe -->
            <!-- Tus elementos de nivel para el Caribe (level1, level2, level3, lock) van aquí -->

            <ImageView
                android:id="@+id/level1Caribbean"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="157dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_4" />

            <ImageView
                android:id="@+id/level2Caribbean"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level1Caribbean"
                android:layout_alignParentStart="true"
                android:layout_marginStart="88dp"
                android:layout_marginTop="240dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_5" />

            <ImageView
                android:id="@+id/level3Caribbean"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level2Caribbean"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-46dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_6" />

            <ImageView
                android:id="@+id/lockCaribbean"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level3Caribbean"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="103dp"
                android:layout_marginEnd="167dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_lock_level" />

        </RelativeLayout>

        <!-- Contenedor para el Nivel Amazonas -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Banner del Nivel Amazonas -->
            <!-- Level Banner, streak days and XP points Caribbean -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bannerAmazonas"
                android:layout_width="379dp"
                android:visibility="gone"
                android:layout_height="65dp"
                android:layout_margin="25dp"
                android:padding="8dp"
                android:backgroundTint="@color/paco"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop= "20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Título de Nivel -->
                    <TextView
                        android:id="@+id/tvTitleAmazonas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@raw/regularbold"
                        android:paddingStart="15dp"
                        android:paddingEnd="1dp"
                        android:text="@string/nivel_3_regi_n_amaz_nica"
                        android:textColor="#585554"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Ícono de Racha -->
                    <ImageView
                        android:id="@+id/iconStreakAmazonas"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="@string/rachainc"
                        android:src="@drawable/ic_fires" />

                    <!-- Texto de Racha -->
                    <TextView
                        android:id="@+id/tvStreakAmazonas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@raw/regularbold"
                        android:text="@string/_1"
                        android:textColor="#8D8A89"
                        android:textSize="18sp" />

                    <!-- Ícono de Puntos -->
                    <ImageView
                        android:id="@+id/iconPointsAmazonas"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="@string/rch"
                        android:paddingTop="4dp"
                        android:src="@drawable/ic_light" />

                    <!-- Texto de Puntos -->
                    <TextView
                        android:id="@+id/tvPointsAmazonas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@raw/regularbold"
                        android:text="@string/_500dp"
                        android:textColor="#8D8A89"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Imagen del Mapa Amazonas -->
            <ImageView
                android:id="@+id/mapImageAmazonas"
                android:layout_width="match_parent"
                android:layout_height="749dp"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_map_amazonic" />

            <!-- Niveles de Amazonas -->

            <ImageView
                android:id="@+id/level1Amazonas"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="177dp"
                android:layout_marginTop="212dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_7" />

            <ImageView
                android:id="@+id/level2Amazonas"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level1Amazonas"
                android:layout_alignParentStart="true"
                android:layout_marginStart="149dp"
                android:layout_marginTop="205dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_8" />

            <ImageView
                android:id="@+id/level3Amazonas"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/level2Amazonas"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="205dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/img_level_9" />




        </RelativeLayout>

    </LinearLayout>
</ScrollView>