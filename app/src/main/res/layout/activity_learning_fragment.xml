<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Layout interno para contener las imágenes del mapa y los íconos -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del primer nivel del mapa -->
        <ImageView
            android:id="@+id/mapImage1"
            android:layout_width="match_parent"
            android:layout_height="749dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_map_andina"
            android:contentDescription="@string/todo" />

        <!-- Íconos del primer nivel -->
        <ImageView
            android:id="@+id/level1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:contentDescription="@string/todo"
            android:layout_marginTop="130dp"
            android:src="@drawable/img_level_1" />

        <ImageView
            android:id="@+id/level2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/todo"
            android:layout_below="@id/level1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="185dp"
            android:src="@drawable/img_level_2" />

        <ImageView
            android:id="@+id/level3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level2"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/img_level_3" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level3"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="180dp"
            android:src="@drawable/img_lock_level" />

        <!-- Imagen del segundo nivel del mapa -->
        <ImageView
            android:id="@+id/mapImage2"
            android:layout_width="match_parent"
            android:layout_height="749dp"
            android:layout_below="@id/mapImage1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_map_caribbean"
            android:contentDescription="@string/todo" />

        <!-- Íconos del segundo nivel -->

        <ImageView
            android:id="@+id/level4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/mapImage2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="-583dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_4" />

        <ImageView
            android:id="@+id/level5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level4"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="191dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_5" />

        <ImageView
            android:id="@+id/level6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level5"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="191dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_6" />


        <!-- Continúa agregando los íconos de nivel del segundo nivel según sea necesario -->

    </RelativeLayout>
</ScrollView>