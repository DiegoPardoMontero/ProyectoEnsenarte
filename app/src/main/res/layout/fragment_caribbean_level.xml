<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Layout interno para contener las imágenes del mapa y los íconos -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del primer nivel del mapa -->
        <ImageView
            android:id="@+id/mapImage1"
            android:layout_width="match_parent"
            android:layout_height="749dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_map_caribbean"
            android:contentDescription="@string/todo" />

        <!-- Íconos del primer nivel -->

        <ImageView
            android:id="@+id/level1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="157dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_4" />

        <ImageView
            android:id="@+id/level2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="240dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_5" />

        <ImageView
            android:id="@+id/level3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-46dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_6" />

        <!-- Imagen del segundo nivel del mapa -->
        <ImageView
            android:id="@+id/lock"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="180dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_lock_level" />
    </RelativeLayout>
</ScrollView>