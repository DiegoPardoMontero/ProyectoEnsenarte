<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <!-- Layout interno para contener las imágenes del mapa y los íconos -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="379dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            app:cardBackgroundColor="@color/paco"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Título de Nivel -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@raw/regularbold"
                    android:paddingLeft="45dp"
                    android:paddingRight="15dp"
                    android:text="Nivel 2: Región Caribe"
                    android:textColor="#585554"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Ícono de Racha -->
                <ImageView
                    android:id="@+id/iconStreak"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Ícono de Racha"
                    android:src="@drawable/ic_fires" />

                <!-- Texto de Racha -->
                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@raw/regularbold"
                    android:text="1"
                    android:textColor="#8D8A89"
                    android:textSize="18sp" />

                <!-- Ícono de Puntos -->
                <ImageView
                    android:id="@+id/iconPoints"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Ícono de Puntos"
                    android:paddingTop="4dp"
                    android:src="@drawable/ic_light" />

                <!-- Texto de Puntos -->
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@raw/regularbold"
                    android:text="500px"
                    android:textColor="#8D8A89"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/mapImage1"
            android:layout_width="match_parent"
            android:layout_height="749dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_map_caribbean" />

        <ImageView
            android:id="@+id/upLevel2To1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="101dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_up" />

        <ImageView
            android:id="@+id/level1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="157dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_4" />

        <ImageView
            android:id="@+id/level2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="240dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_5" />

        <ImageView
            android:id="@+id/level3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-46dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_level_6" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/level3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="167dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/img_lock_level" />
    </RelativeLayout>
</ScrollView>