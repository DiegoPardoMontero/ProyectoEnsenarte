<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coralSea">

    <TextView
        android:id="@+id/tvRecordSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@raw/regularbold"
        android:text="Grabar Se침a"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:shapeAppearanceOverlay="@style/RoundedCardCorners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRecordSign">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Haz la se침a 'Cama', activa la c치mara y graba el video"
                android:textAlignment="center"
                android:textColor="@color/bear"
                android:textSize="20sp"
                android:fontFamily="@raw/regular"
                android:layout_marginBottom="32dp"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_camera_placeholder"
                android:layout_marginBottom="32dp"
                android:contentDescription="Camera icon"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActivateCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activar C치mara"
                android:textSize="18sp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                app:cornerRadius="24dp"
                android:backgroundTint="@color/coralSea"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>